// Custom styles.
//首页文章标题样式，改为居中
.posts-expand .post-title, .posts-expand .post-meta {
    text-align: center;
    word-break: break-word;
    font-weight: 400;
}

//增加侧栏透明度
.sidebar {
    position: fixed;
    right: 0;
    top: 0;
    bottom: 0;
    width: 0;
    z-index: 1040;
    box-shadow: inset 0 2px 6px #000;
    background: #222;
    -webkit-transform: translateZ(0);
    -khtml-opacity: 0.8;  
    opacity: 0.8;  //增加透明效果
}